# Local/private config goes in the include
[include]
    path = ~/.config/.gitconfig.sec

[user]
    name = Fabrice Laporte
    email = fabrice@yescapa.com
[core]
    editor = nano
    excludesfile = ~/.gitignore

# From there, sections are in alphabetic order

[alias]
    co = "!f() { git checkout \"$@\" && git stash list | grep \"$1:\"; }; f"
    last = log -1 HEAD
    st = status
    uncommit = reset --soft HEAD~
    unstage = reset HEAD --
    lg = log --graph --abbrev-commit --decorate --date=relative --all

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[diff]
    tool = meld

[difftool]
    prompt = false

[gui]
    # Remove `git gui` pop-up warning
    gcwarning = false

[help]
    autocorrect = 1

[merge]
    tool = meld

[mergetool]
    keepBackup = false

[mergetool "meld"]
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[pull]
    rebase = true

[push]
    default = simple

[rebase]
    autoStash = true
